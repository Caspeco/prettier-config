{
	"name": "@caspeco/prettier-config",
	"version": "1.0.2",
	"description": "Caspeco prettier config",
	"main": "index.js",
	"license": "MIT",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/caspeco/prettier-config.git"
	},
	"bugs": {
		"url": "https://github.com/caspeco/prettier-config/issues"
	},
	"engines": {
		"node": "20.11.x",
		"npm": "^10.2.x"
	},
	"keywords": [
		"prettier",
		"prettier-config"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"lint": "eslint . --report-unused-disable-directives --max-warnings 0",
		"lint:fix": "eslint . --report-unused-disable-directives --fix",
		"prettier:check": "prettier --check .",
		"prettier:fix": "prettier --write .",
		"test": "vitest",
		"ci-test": "CI=true vitest"
	},
	"prettier": "./index.js",
	"devDependencies": {
		"@types/node": "^22.0.0",
		"@caspeco/eslint-config": "2.1.1",
		"vite": "^5.2.10",
		"vitest": "^2.0.3"
	},
	"dependencies": {
		"prettier": "^3.2.5"
	}
}
